@page
@model DOINHE.Pages.Product.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
}
<style>
    .scrolled .header {
        --background-color: #ff7469;
    }

    .dark-background {
        --background-color: #ff7469;
        --default-color: #ffffff;
        --heading-color: #ffffff;
        --surface-color: #284e62;
        --contrast-color: #ffffff;
    }
</style>
<main class="main">
    <!-- Page Title -->
    <div class="page-title dark-background">
        <div class="container position-relative">
            <h1>Create Product</h1>
            <p>Fill in the details to create a new product.</p>
            <nav class="breadcrumbs">
                <ol>
                    <li><a href="index">Home</a></li>
                    <li class="current">Create Product</li>
                </ol>
            </nav>
        </div>
    </div><!-- End Page Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div class="row gy-4 justify-content-center">
            <div class="col-lg-10" style="padding-top: 30px;">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <form enctype="multipart/form-data" method="post" class="form">
                            <div class="row gy-4">
                                <div class="col-md-6">
                                    <label asp-for="Product.ProductName" class="control-label">Name</label>
                                    <input asp-for="Product.ProductName" class="form-control" placeholder="Product Name" />
                                    <span asp-validation-for="Product.ProductName" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Product.quantityInStock" class="control-label">Quantity</label>
                                    <input asp-for="Product.quantityInStock" class="form-control" placeholder="Quantity In Stock" />
                                    <span asp-validation-for="Product.quantityInStock" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Product.DateTimeStart" class="control-label">Date Time Start</label>
                                    <input asp-for="Product.DateTimeStart" type="datetime-local" class="form-control" />
                                    <span asp-validation-for="Product.DateTimeStart" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Product.DateTimeEnd" class="control-label">Date Time End</label>
                                    <input asp-for="Product.DateTimeEnd" type="datetime-local" class="form-control" />
                                    <span asp-validation-for="Product.DateTimeEnd" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Product.Price" class="control-label">Price</label>
                                    <input asp-for="Product.Price" class="form-control" placeholder="Price" />
                                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Product.Address" class="control-label">Address detail</label>
                                    <input asp-for="Product.Address" class="form-control" placeholder="Address" />
                                    <span asp-validation-for="Product.Address" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Product.CategoryId" class="control-label">Address</label>
                                    <select asp-for="Product.CategoryId" class="form-control" asp-items="Model.CategoryList">
                                        <option value="">Select a category</option>
                                    </select>
                                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                                </div>



                                <div class="col-md-6">
                                    <label asp-for="Product.ImgDescription" class="control-label">Photo description</label>
                                    <input asp-for="Product.ImgDescription" type="file" class="form-control" onchange="previewImage(event)" />
                                    <span asp-validation-for="Product.ImgDescription" class="text-danger"></span>
                                </div>

                                <div class="col-md-12">
                                    <label asp-for="Product.Description" class="control-label">Description</label>
                                    <textarea asp-for="Product.Description" class="form-control" rows="3" placeholder="Description"></textarea>
                                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <img id="imagePreview" src="#" alt="Image Preview" style="display:none; width: 100px; height: auto;" />
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Product.Key" class="control-label">Key (This is the code the customer receives when purchasing)</label>
                                    <input asp-for="Product.Key" class="form-control" placeholder="Key" />
                                    <span asp-validation-for="Product.Key" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Product.ImgKey" class="control-label">Key photo(This is the photo the customer received when purchasing)</label>
                                    <input asp-for="Product.ImgKey" type="file" class="form-control" onchange="previewImage2(event)" />
                                    <span asp-validation-for="Product.ImgKey" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <img id="imagePreview2" src="#" alt="Image Preview" style="display:none; width: 100px; height: auto;" />
                                </div>

                                <div class="col-md-12 text-center">
                                    <button type="submit" class="btn btn-primary">Create Product</button>
                                </div>
                            </div>
                        </form>
                    </div><!-- End Card Body -->
                </div><!-- End Card -->
            </div>
        </div>
    </div>

    <div class="text-center mt-4" style="padding-bottom: 30px;">
        <a asp-page="~/index" class="btn btn-secondary">Cancel</a>
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function previewImage(event) {
            const imagePreview = document.getElementById('imagePreview');
            const file = event.target.files[0];
            const reader = new FileReader();

            reader.onload = function (e) {
                imagePreview.src = e.target.result;
                imagePreview.style.display = 'block';
            }

            if (file) {
                reader.readAsDataURL(file);
            } else {
                imagePreview.src = '#';
                imagePreview.style.display = 'none';
            }
        }

        function previewImage2(event) {
            const imagePreview = document.getElementById('imagePreview2');
            const file = event.target.files[0];
            const reader = new FileReader();

            reader.onload = function (e) {
                imagePreview.src = e.target.result;
                imagePreview.style.display = 'block';
            }

            if (file) {
                reader.readAsDataURL(file);
            } else {
                imagePreview.src = '#';
                imagePreview.style.display = 'none';
            }
        }
    </script>
}
