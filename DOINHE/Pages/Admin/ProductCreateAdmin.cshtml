@page
@model DOINHE.Pages.Admin.ProductAddAdminModel
@{
    Layout = "_LayoutAdmin";
}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card border border-secondary shadow-sm">
                <div class="card-header bg-gradient-dark text-white">
                    <h6 class="text-white text-capitalize">Create New Product</h6>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <tbody>
                                    <!-- Product Name -->
                                    <tr>
                                        <td class="fw-bold">Product Name</td>
                                        <td><input type="text" class="form-control" name="ProductName" required /></td>
                                    </tr>
                                    <!-- Category -->
                                    <tr>
                                        <td class="fw-bold">Category</td>
                                        <td><input type="number" class="form-control" name="CategoryId" required /></td>
                                    </tr>
                                    <!-- Price -->
                                    <tr>
                                        <td class="fw-bold">Price</td>
                                        <td><input type="number" class="form-control" name="Price" required /></td>
                                    </tr>
                                    <!-- Quantity in Stock -->
                                    <tr>
                                        <td class="fw-bold">Quantity in Stock</td>
                                        <td><input type="number" class="form-control" name="QuantityInStock" required /></td>
                                    </tr>
                                    <!-- Description -->
                                    <tr>
                                        <td class="fw-bold">Description</td>
                                        <td><textarea class="form-control" name="Description"></textarea></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary mt-3">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
