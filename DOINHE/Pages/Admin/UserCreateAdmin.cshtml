@page
@model DOINHE.Pages.Admin.UserAddAdminModel
@{
    Layout = "_LayoutAdmin";
}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card border border-secondary shadow-sm">
                <div class="card-header bg-gradient-dark text-white">
                    <h6 class="text-white text-capitalize">Create New User</h6>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <tbody>
                                    <!-- Username -->
                                    <tr>
                                        <td class="fw-bold">Username</td>
                                        <td><input type="text" class="form-control" name="UserName" required /></td>
                                    </tr>
                                    <!-- Name -->
                                    <tr>
                                        <td class="fw-bold">Name</td>
                                        <td><input type="text" class="form-control" name="Name" required /></td>
                                    </tr>
                                    <!-- Email -->
                                    <tr>
                                        <td class="fw-bold">Email</td>
                                        <td><input type="email" class="form-control" name="Email" required /></td>
                                    </tr>
                                    <!-- Phone -->
                                    <tr>
                                        <td class="fw-bold">Phone</td>
                                        <td><input type="text" class="form-control" name="Phone" required /></td>
                                    </tr>
                                    <!-- Password -->
                                    <tr>
                                        <td class="fw-bold">Password</td>
                                        <td><input type="password" class="form-control" name="Password" required /></td>
                                    </tr>
                                    <!-- Role -->
                                    <tr>
                                        <td class="fw-bold">Role</td>
                                        <td><input type="text" class="form-control" name="Role" required /></td>
                                    </tr>
                                    <!-- Money -->
                                    <tr>
                                        <td class="fw-bold">Money</td>
                                        <td><input type="number" class="form-control" name="Money" required /></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary mt-3">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
